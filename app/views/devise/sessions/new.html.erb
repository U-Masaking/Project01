<%= stylesheet_link_tag "session" %>
<%= stylesheet_link_tag "application" %>

<div class="card text-center">
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="card-title">ログイン</h2>
      
      <div class="field">
        <%= f.email_field :email, :class => "box", :placeholder => "メールアドレス", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, :class => "box", :placeholder => "パスワード", autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "ログイン", :class => "btn btn-primary" %>
      </div>
    <% end %>

    <div class="registration">
      <p><span>------</span>まだ登録されていませんか？<span>------</span></p>
      <%= link_to "新規登録", new_user_registration_path %>
    </div>
  </div>
</div>
